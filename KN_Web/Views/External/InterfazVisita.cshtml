    <style>
        .carousel-control-prev, .carousel-control-next {
            width: 5%; /* Ajusta el área clickable */
            opacity: 0.8; /* Opacidad inicial */
            transition: opacity 0.3s ease; /* Transición suave */
        }

            .carousel-control-prev:hover, .carousel-control-next:hover {
                opacity: 1; /* Más visible al pasar el mouse */
            }

        .carousel-control-prev-icon, .carousel-control-next-icon {
            background-image: none; /* Elimina el ícono por defecto */
            width: 40px;
            height: 40px;
            display: inline-block;
            position: relative;
        }

            /* Flecha izquierda moderna */
            .carousel-control-prev-icon::before {
                content: "❮"; /* Ícono de flecha moderna */
                font-size: 40px;
                color: #333; /* Color de la flecha */
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }

            /* Flecha derecha moderna */
            .carousel-control-next-icon::before {
                content: "❯"; /* Ícono de flecha moderna */
                font-size: 40px;
                color: #333; /* Color de la flecha */
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }

