@model List<KN_Web.BaseDatos.tProducto>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Resultados de Búsqueda";
}

<div class="container">
    <h2>Resultados de búsqueda</h2>
    <hr />

    <!-- Barra de búsqueda -->
    @using (Html.BeginForm("Busqueda", "Login", FormMethod.Get))
    {
        <div class="input-group mb-3">
            <input type="text" name="search" class="form-control" placeholder="Buscar producto..." />
            <button class="btn btn-outline-secondary" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <!-- Renderizamos directamente el partial que ya contiene su propia <div class="row"> -->
        @Html.Partial("_ProductosPartial", Model)
    }
    else
    {
        <div class="text-center mt-5">
            <p>No se encontraron productos que coincidan con la búsqueda.</p>
            <a href="@Url.Action("Home", "Login")" class="btn btn-primary">Regresar</a>
        </div>
    }
</div>
