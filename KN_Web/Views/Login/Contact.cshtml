<body>

    <!-- contact section start -->
    <div class="contact_section layout_padding">
        <div class="container">
            <h1>Contáctenos</h1>
            <p>¿Tienes preguntas o quieres saber más sobre nuestro café? ¡Nos encantaría escucharte!</p>

            <div class="contact-info">
                <p>📍 <strong>Ubicación:</strong> Dota, Costa Rica</p>
                <p>📧 <strong>Correo:</strong> <a href="mailto:contacto@tucafe.com">contacto@gmail.com</a></p>
                <p>📞 <strong>Teléfono:</strong> <a href="tel:+50688888888">+506 8888-8888</a></p>
                <p>📷 <strong>Instagram:</strong> <a href="https://www.instagram.com/p/CZtNF4FuLwN/?img_index=1" target="_blank">CafeMendezCR</a></p>
            </div>
        </div>
    </div>

    <div class="contact_section_2 layout_padding">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 padding_0">
                    <div class="mail_section">
                        <div class="email_text">
                            @using (Html.BeginForm("Index", "Contacto", FormMethod.Post, new { id = "contactoForm" }))
                            {
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Nombre, new { @class = "email-bt", placeholder = "Nombre", style = "width: 100%; padding: 10px; border: 1px solid #ccc; background-color: #fff; border-radius: 5px; color: #000;" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "email-bt", placeholder = "Email", style = "width: 100%; padding: 10px; border: 1px solid #ccc; background-color: #fff; border-radius: 5px; color: #000;" })
                                </div>
                                <div class="form-group">
                                    @Html.TextBoxFor(m => m.Telefono, new { @class = "email-bt", placeholder = "Número de Teléfono", style = "width: 100%; padding: 10px; border: 1px solid #ccc; background-color: #fff; border-radius: 5px; color: #000;" })
                                </div>
                                <div class="form-group">
                                    @Html.TextAreaFor(m => m.Mensaje, new { @class = "massage-bt", placeholder = "Mensaje", rows = "5", style = "width: 100%; padding: 10px; border: 1px solid #ccc; background-color: #fff; border-radius: 5px; color: #000;" })
                                </div>
                                <div class="send_btn">
                                    <button type="submit" class="main_bt" style="padding: 10px 20px; background-color: #007bff; color: #fff; text-decoration: none; border-radius: 5px;">Enviar</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="col-md-6 padding_0">
                    <div class="map-responsive">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d40357.367328336535!2d-84.00638016139146!3d9.654799422882636!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8fa1179bc4733f29%3A0xa6bb565b039dcb83!2zU2FudGEgTWFyw61hIGRlIERvdGEsIFNhbiBKb3PDqSwgU2FudGEgTWFyw61h!5e1!3m2!1ses-419!2scr!4v1742876159198!5m2!1ses-419!2scr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- contact section end -->
    <!-- footer section start -->
    <div class="footer_section layout_padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-3 col-sm-6">
                    <h3 class="useful_text">Acerca de nosotros</h3>
                    <p class="footer_text">Directo de la zona de los Santos hasta su mesa</p>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <h3 class="useful_text">Menu</h3>
                    <div class="footer_menu">
                        <ul>
                            
                                <li>@Html.ActionLink("Inicio", "homepage", "Login")</li>
                                <li>@Html.ActionLink("Acerca de Nosotros", "About", "Login")</li>
                                <li>@Html.ActionLink("Galeria", "Gallery", "Login")</li>
                                <li>@Html.ActionLink("Contactenos", "Contact", "Login")</li>
                            </ul>
                    </div>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <h1 class="useful_text">Politicas de compra y Envios</h1>
                    <p class="dummy_text">Envios y Devoluciones </p>
                    <p class="dummy_text">Pagos </p>
                </div>
                <div class="col-lg-3 col-sm-6">
                    <h1 class="useful_text">Contactenos</h1>
                    <div class="location_text">
                        <ul>
                            <li>
                                <a href="#">
                                    <i class="fa fa-map-marker" aria-hidden="true"></i><span class="padding_left_10">Direccion:Los Santos, Santa Maria de Dota </span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-phone" aria-hidden="true"></i><span class="padding_left_10">Telefono: +01 1234567890</span>
                                </a>
                            </li>
                            <li>
                                <a href="#">
                                    <i class="fa fa-envelope" aria-hidden="true"></i><span class="padding_left_10">Email : demo@gmail.com</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- footer section end -->
    <!-- copyright section start -->
    <div class="copyright_section">
        <div class="container">
            <p class="copyright_text">2020 All Rights Reserved. Design by <a href="https://html.design">Free html  Templates</a></p>
        </div>
    </div>
    <!-- copyright section end -->
    <!-- Javascript files-->
    <!-- Javascript files-->
    <script src="@Url.Content("~/root/dist/js/popper.min.js")"></script>
    <script src="@Url.Content("~/root/dist/js/bootstrap.bundle.min.js")"></script>
    <script src="@Url.Content("~/root/dist/js/plugin.js")"></script>
    <!-- sidebar -->
    <script src="@Url.Content("~/root/dist/js/jquery.mCustomScrollbar.concat.min.js")"></script>
    <script src="@Url.Content("~/root/dist/js/custom.js")"></script>

    <script>
        (function () { if (!window.chatbase || window.chatbase("getState") !== "initialized") { window.chatbase = (...arguments) => { if (!window.chatbase.q) { window.chatbase.q = [] } window.chatbase.q.push(arguments) }; window.chatbase = new Proxy(window.chatbase, { get(target, prop) { if (prop === "q") { return target.q } return (...args) => target(prop, ...args) } }) } const onLoad = function () { const script = document.createElement("script"); script.src = "https://www.chatbase.co/embed.min.js"; script.id = "y-804SD1Jx2UKBVv6UmOQ"; script.domain = "www.chatbase.co"; document.body.appendChild(script) }; if (document.readyState === "complete") { onLoad() } else { window.addEventListener("load", onLoad) } })();
    </script>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        document.getElementById("contactoForm").addEventListener("submit", function (event) {
            event.preventDefault(); // Evita que el formulario se envíe automáticamente

            let form = this;

            // Envía el formulario con AJAX
            fetch(form.action, {
                method: form.method,
                body: new FormData(form)
            })
                .then(response => {
                    if (response.redirected) {
                        Swal.fire({
                            title: "¡Gracias por contactarnos!",
                            text: "Su mensaje ha sido enviado con éxito. Nos pondremos en contacto pronto.",
                            icon: "success",
                            confirmButtonText: "Aceptar"
                        }).then(() => {
                            window.location.href = response.url; // Redirige a "About"
                        });
                    } else {
                        Swal.fire("Error", "Hubo un problema al enviar el mensaje.", "error");
                    }
                })
                .catch(error => {
                    Swal.fire("Error", "No se pudo procesar la solicitud.", "error");
                });
        });
    </script>
</body>
</html>