<style>
    .blur-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('../../root/dist/img/fondologin.jpeg') no-repeat center center;
        background-size: cover;
        filter: blur(5px);
        z-index: -1;
    }

    .card {
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
        border-radius: 10px;
        padding: 20px;
    }
</style>

<div class="blur-background"></div>

@model KN_Web.Entidades.Usuario

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
    ViewBag.Title = "Home Page";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Iniciar Sesión</p>

            @if (ViewBag.msj != null)
            {
                <div class="alert alert-info text-center" role="alert">
                    @ViewBag.msj
                </div>
            }

            @using (Html.BeginForm("Index", "Login"))
            {
                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Correo, new { @type = "email", @class = "form-control", @placeholder = "Correo Electrónico" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <i class="fa-solid fa-envelope"></i>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    @Html.TextBoxFor(m => m.Contrasenna, new { @type = "password", @class = "form-control", @placeholder = "Contraseña" })
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <i class="fa-solid fa-user-lock"></i>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                    </div>
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Iniciar sesión</button>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="recordarme" value="true"> Recordarme
                        </label>
                    </div>
                </div>
            }

            <p class="mb-1">
                <a href="@Url.Action("RecuperarAcceso","Login")">Olvidé mi contraseña</a>
            </p>
            <p class="mb-0">
                <a href="@Url.Action("Registro","Login")" class="text-center">Crear una cuenta</a>
            </p>
        </div>
    </div>
</div>
