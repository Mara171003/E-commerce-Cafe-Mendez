@model KN_Web.Entidades.Usuario

<style>
    .blur-background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('../../root/dist/img/fondologin.jpeg') no-repeat center center;
        background-size: cover;
        filter: blur(5px);
        z-index: -1;
    }

    .card {
        background: rgba(255, 255, 255, 0.3);
        backdrop-filter: blur(10px);
        border-radius: 10px;
        padding: 20px;
    }
</style>

<div class="blur-background"></div>

@{
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
    ViewBag.Title = "Home Page";
}

<div class="card">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Recuperar Acceso</p>

        @if (ViewBag.msj != null)
        {
            <div class="alert alert-info" role="alert" style="text-align:center">
                @ViewBag.msj
            </div>
        }

        @using (Html.BeginForm("RecuperarAcceso", "Login"))
        {
            <div class="input-group mb-3">
                @Html.TextBoxFor(m => m.Identificacion, new { @type = "text", @class = "form-control", @placeholder = "Identificación" })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <i class="fa-solid fa-address-card"></i>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-8">
                </div>
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Recuperar</button>
                </div>
            </div>
        }

        <a href="@Url.Action("Index","Login")" class="text-center">Iniciar Sesión</a>
    </div>
</div>
